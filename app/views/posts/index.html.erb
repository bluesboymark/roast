
<% if current_user %>
  <h3> Hi, <%= current_user.first_name%> <%= current_user.last_name%>!</h3>
  <button><%= link_to 'Log out', logout_path, method: :delete  %></button>
  <button><%=link_to 'Post a roast!', new_post_path  %></button>
  <button><%=link_to 'Edit profile', edit_user_path(current_user)  %></button>
<% else %>
  <button><%=link_to 'Log in', login_path  %></button>
  <button><%=link_to 'Sign up', new_user_path(current_user) %></button>
<%end%>






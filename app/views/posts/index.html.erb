<h1>ROAST</h1>
<h1>Feel the Burn!</h1>
<% if current_user %>
  <%= link_to 'Log Out', logout_path, method: :delete  %>
  <%=link_to 'Post a Roast!', new_post_path  %>
  <%= current_user.first_name%>
<% else %>
  <%=link_to 'Log In', login_path  %>
  <%=link_to 'Sign up', new_user_path  %>
<%end%>




<p>Roast someone!</p>
<ul class="list-group">
  <% @posts.each do |p| %>
  <li> <%= link_to (p.description), post_path(p) %> by <%=p.user.first_name%> <%=p.user.last_name%></li>
  <% end %>
</ul>
<p>Popular roasts</p>
